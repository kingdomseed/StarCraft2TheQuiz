<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:fillViewport="true"
    android:orientation="vertical"
    tools:context="org.holtnet.StarCraftUnitQuiz.MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/TitleTextTop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="@dimen/margin_end"
            android:layout_marginTop="@dimen/margin_top"
            android:background="@drawable/rounded_corners_dark"
            android:padding="@dimen/padding_eight"
            android:text="@string/your_results"
            android:textAllCaps="true"
            android:textColor="@color/colorAccent"
            android:textSize="@dimen/titles"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/Score"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@id/return_button"
            android:layout_alignParentEnd="true"
            android:layout_marginBottom="@dimen/margin_end"
            android:layout_marginEnd="@dimen/margin_end"
            android:background="@drawable/rounded_corners_dark"
            android:padding="@dimen/padding_eight"
            android:text="@string/zeropercent"
            android:textAllCaps="true"
            android:textColor="@color/colorAccent"
            android:textSize="@dimen/titles"
            android:textStyle="bold" />

        <Button
            android:id="@+id/return_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_centerInParent="true"
            android:layout_marginBottom="@dimen/margin_bot_big"
            android:layout_marginEnd="@dimen/margin_end"
            android:background="@drawable/rounded_corners_dark"
            android:padding="@dimen/padding_eight"
            android:text="@string/return_to_menu"
            android:textColor="@color/colorAccent" />

        <Button
            android:id="@+id/share_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:layout_centerInParent="true"
            android:layout_marginBottom="@dimen/margin_bot_big"
            android:layout_marginStart="@dimen/margin_top"
            android:background="@drawable/rounded_corners_dark"
            android:padding="@dimen/padding_eight"
            android:text="@string/share_your_score"
            android:textColor="@color/colorAccent" />

    </RelativeLayout>


</ScrollView>
