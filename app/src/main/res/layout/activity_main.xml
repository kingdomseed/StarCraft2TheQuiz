<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:fillViewport="true"
    android:orientation="vertical"
    tools:context="org.holtnet.StarCraftUnitQuiz.MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/TitleTextTop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_top"
            android:layout_marginEnd="@dimen/margin_top"
            android:layout_marginTop="@dimen/margin_top"
            android:background="@drawable/rounded_corners_dark"
            android:padding="@dimen/padding_eight"
            android:text="@string/title"
            android:textAllCaps="true"
            android:textColor="@color/colorAccent"
            android:textSize="@dimen/title_text"
            android:textStyle="bold" />


        <Button
            android:id="@+id/begin_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerInParent="true"
            android:layout_marginBottom="@dimen/margin_bot_big"
            android:background="@drawable/rounded_corners_dark"
            android:padding="@dimen/padding_eight"
            android:text="@string/begin_exam"
            android:textColor="@color/colorAccent" />


    </RelativeLayout>


</ScrollView>
